---
import SocialIcon from './SocialIcon.astro';

interface Social {
    icon: 'github' | 'youtube' | 'linkedIn' | 'linktree';
    link: string;
    title?: string;
}

const socials: Social[] = [{
    icon: 'github',
    link: 'https://github.com/jcpenfie',
    title: 'View GitHub Profile'
}, {
    icon: 'youtube',
    link: 'https://www.youtube.com/@JohnnyFinchDev',
    title: 'View Youtube Channel'
}, {
    icon: 'linkedIn',
    link: 'https://www.linkedin.com/in/juan-carlos-pe%C3%B1a-fierro/',
    title: 'View LinkedIn Profile'
}, {
    icon: 'linktree',
    link: 'https://linktr.ee/jcpenfie',
    title: 'See More Links'
}];

---

<!-- Start: Social Links -->
<div class="flex flex-wrap gap-3 mt-6 justify-between">

    {socials.map(social =>
        <a
            href={social.link}
            target="_blank"
            title={social.title}
            rel="noopener noreferrer"
            class="flex items-center justify-center w-10 h-10 rounded-lg bg-slate-900 text-gray-100 transition-all duration-150 border border-gray-600 hover:bg-primary hover:-translate-y-0.5">
            <SocialIcon icon={social.icon} />
        </a>
    )}

</div>
<!-- End: Social Links -->