---
import { Picture } from 'astro:assets';
import ProfilePicture from '../assets/profile.avif';
import cvpdf from '../assets/pdf/JuanCarlos-CV.pdf';

const profile = {
    name: 'Juan Carlos',
    title: 'Full Stack Developer',
    location: 'Seviile, Spain',
    description: `+2 years experience as a Full Stack Web Developer. My commitment to clean code and timely project delivery aligns with your company's goals, making me a valuable asset for innovative solutions.`
};
---

<div class="flex flex-col gap-6 items-center text-center sm:items-start sm:text-left">

    <div class="flex flex-col sm:flex-row gap-4 sm:items-center">

        <Picture
            src={ProfilePicture}
            formats={['avif']}
            width={96}
            height={96}
            alt={'Profile picture ' + profile.name}
            title={profile.name}
            class="w-24 h-24 rounded-xl object-cover border-2 border-primary mx-auto sm:mx-0"
        />

        <div>

            <h1 class="text-2xl font-extrabold mb-1 inline-block relative ">
                {profile.name}
            </h1>

            <p class="text-sm mb-2 text-primary">
                {profile.title}
            </p>

            <p class="flex items-center justify-center sm:justify-start text-sm text-gray-400">
                <svg class="-mt-0.5 inline mr-2"fill=none height=14 stroke=currentColor stroke-linecap=round stroke-linejoin=round stroke-width=2 viewBox="0 0 24 24"width=14 xmlns=http://www.w3.org/2000/svg><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx=12 cy=10 r=3></circle></svg>
                {profile.location}
            </p>

        </div>

    </div>

    <p class="text-sm leading-relaxed mt-4 text-gray-400">
        {profile.description}
    </p>

    <a class="w-full" href={cvpdf} download="JuanCarlos-CV.pdf">
            <button
                class="
                    w-full px-4 py-2.5 mt-4 text-center

                    border border-gray-600 rounded-lg

                    hover:text-primary
                    hover:border-primary
                    ">
                    
                        Download CV
                
            </button>
    </a>
                
</div>