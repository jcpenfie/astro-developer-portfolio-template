                                    <h3 class="text-xl font-semibold text-white">
                                        {experience.position}
                                    </h3>
                                    {experience.status === 'current' && (
                                        <span class="px-2 py-1 text-xs font-medium bg-primary/20 text-primary rounded-full border border-primary/30">
                                            Actual
                                        </span>
                                    )}
                                </div>
                                
